@model List<UsuarioModel>;
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card col-8">
    <div class="card-header">
        Lista de contacto
    </div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Usuario" class="btn btn-primary btn-sm">Crear Nuevo</a>
        <table class="table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <br />
                    <th>Apellido</th>
                    <br />
                    <th>Correo</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Apellido)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem=>item.Correo)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-controller="Usuario" asp-route-IdUsuario="@item.IdUsuario"class="btn btn-warning">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Usuario" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-warning">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
